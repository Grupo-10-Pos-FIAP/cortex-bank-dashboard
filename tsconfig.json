{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "lib": [
      "es2015",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "src/declarations.d.ts"],
  "exclude": ["src/**/*.test*", "src/**/*.spec*"]
}
